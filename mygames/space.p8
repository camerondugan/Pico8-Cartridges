pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
-- ◆ portal inspired ◆
--   by  cameron dugan
px=0
py=0
p_can_move=true
p_last_move=t()
inputs={}

function _init()
	--key repeat delay
	poke(0x5f5c, 4)
	poke(0x5f5d, 0)
end


function _draw()
	cls()
	map()
	
	--player
	spr(1+16*flr(t()%2),px,py)
end

function _update60()
	input()
end

function input()
	if (btnp(0)) p_move(-1,0)
	if (btnp(1)) p_move(1,0)
	if (btnp(2)) p_move(0,-1)	
	if (btnp(3)) p_move(0,1)
end

function p_move(x,y)
	if (t()-p_last_move>0) then
		px+=8*x
		py+=8*y
		p_last_move=t()
		return true
	end
	return false
end
